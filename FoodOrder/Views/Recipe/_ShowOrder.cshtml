@model FoodOrder.Models.OrderRecipeDetails;

<div class="container-fluid  shadow rounded">
    <div class="row">
        <div class="col-12">
            <img src="@Model.Image_url" class="w-100" id="order-img"/>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10">
            <h2 class="text-dark">@Model.Title</h2>
        </div>
       
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
          <div class="table-responsive p-2">
                <table class="table table-bordered ">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th>Unit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var ing in Model.Ingredients){
                            <tr>
                                <td>@ing.Description</td>
                                <td>@ing.Quantity</td>
                                <td>@ing.unit</td>
                            </tr>
                        }
                    </tbody>
                </table>
          </div>
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <form autocomplete="off" method="post">
                <div class="p-2">
                    <h4 class="text-dark">Fatura Detayı</h4>
                    <div class="row border-bottom">
                        <label class="col-10 col-form-label">Price</label>
                        <div class="col-2">
                            <span>@ViewBag.Price</span>
                            <i class="fa-solid fa-turkish-lira-sign"></i>
                        </div>
                    </div>
                    <div class="row border-bottom">
                        <label class="col-10 col-form-label">Quantity</label>
                        <div class="col-2 border border-success border-1 p-1 qtyselection">
                            <span onclick="quantity('inc')"><i class="fa-solid fa-plus"></i></span>
                            <input type="text" id="qty" class="form-control w-50 d-inline text-center" value="1" readonly/>
                            <span onclick="quantity('dec')"><i class="fa-solid fa-minus"></i></span>
                        </div>
                    </div>
                    <div class="row border-bottom">
                        <label class="col-10 col-form-label">Delivery Charge</label>
                        <label class="col-2 col-form-label text-success fw-bold">Free</label>
                    </div>
                    <div class="px-1 mb-2 ">
                        <label class="form-label">Delivery Address</label>
                        <input type="text" class="form-control" name="Address" value="@ViewBag.Address" />
                    </div>
                    <div class="row border-bottom border-dark border-1">
                        <label class="col-10 col-form-label fs-5 fw-bold">Total</label>
                        <div class="col-2 ">
                            <span>@ViewBag.Price</span>
                            <i class="fa-solid fa-turkish-lira-sign"></i>
                         </div>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-sm btn-success p-2 shadow rounded">Sipariş Et</button>
                    </div>
                </div>
            </form>
        </div>       
    </div>
</div>